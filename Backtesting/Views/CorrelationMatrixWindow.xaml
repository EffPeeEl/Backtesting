<Window x:Class="Backtesting.CorrelationMatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backtesting"
        mc:Ignorable="d"
        Title="CorrelationMatrixWindow" Height="450" Width="800">
    <Grid>
        <DataGrid>
            <DataGridTextColumn Header="First Name"  Binding="{Binding FirstName}"/>
            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
            <!--The Email property contains a URI.  For example "mailto:lucy0@adventure-works.com"-->
            
            <DataGridCheckBoxColumn Header="Member?" Binding="{Binding IsMember}" />
            
            
        </DataGrid>
        <ScrollViewer x:Name="CorrScroller">
            
        </ScrollViewer>
    </Grid>
</Window>
